{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"@/app/*": ["./src/app/*"],

			"@/entities/*": ["./src/entities/*"],
			"@/features/*": ["./src/features/*"],
			"@/shared/*": ["./src/shared/*"],
			"@/widgets/*": ["./src/widgets/*"],
			"@/pages/*": ["./src/pages/*"],
			"@/screens/*": ["./src/screens/*"],

			"@/public/*": ["./public/*"],

			"@/ui/*": ["./src/shared/ui/*"],

			"@/store/*": ["./src/shared/store/*"],
			"@/assets/*": ["./src/shared/assets/*"],
			"@/images/*": ["./src/shared/assets/images/*"],
			"@/styles/*": ["./src/shared/assets/styles/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"src/shared/lib/convert-to-webp.js"
	],
	"exclude": ["node_modules"]
}
